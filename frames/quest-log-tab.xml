<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">
  <!-- Quest Log tab for battle pets -->
  <Frame 
    inherits="QuestLogTabButtonTemplate"
    parent="QuestMapFrame"
    parentKey="BattlePetsTab"
    mixin="BattlePetsTabMixin"
  >
    <KeyValues>
      <KeyValue key="displayMode" value="QuestLogDisplayMode.BattlePets" type="global" />
      <KeyValue key="tooltipText" value="Battle Pets" type="string" />
    </KeyValues>
  </Frame>
  <!-- Battle Pets panel in the Quest Log -->
  <Frame
    inherits="EventSchedulerFrameTemplate"
    mixin="BattlePetsMixin"
    parent="QuestMapFrame"
    parentArray="ContentFrames"
    parentKey="BattlePetsFrame"
  >
    <KeyValues>
      <KeyValue key="displayMode" value="QuestLogDisplayMode.BattlePets" type="global" />
    </KeyValues>
    <Anchors>
      <Anchor
        point="TOPLEFT"
        relativeKey="$parent.ContentsAnchor"
        y="-29"
      />
      <Anchor
        point="BOTTOMRIGHT"
        relativeKey="$parent.ContentsAnchor"
        x="-22"
      />
    </Anchors>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture setAllPoints="true">
          <Color r="1" g="1" b="0" />
        </Texture>
      </Layer>
    </Layers>
  </Frame>
</Ui>