<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.blizzard.com/wow/ui/ https://raw.githubusercontent.com/Meorawr/wow-ui-schema/main/UI.xsd">

  <Button
    name="QuestLogBattlePetTemplate"
    virtual="true"
  >
    <Size x="290" y="16" />
    <Layers>
      <Layer level="ARTWORK">
        <FontString inherits="GameFontNormalLeft" parentKey="PetName">
          <Anchors>
            <Anchor point="TOPLEFT" x="31" y="-8" />
            <Anchor point="TOP" x="0" y="-8" />
          </Anchors>
          <Color r="0.75" g="0.61" b="0" />
        </FontString>
        <Texture
          atlas="TaskPOI-Icon"
          hidden="true"
          parentKey="TaskIcon"
          useAtlasSize="true"
        >
          <Anchors>
            <Anchor
              point="TOPRIGHT"
              relativeKey="$parent.PetName"
              relativePoint="TOPLEFT"
              x="-5"
              y="4"
            />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="BORDER">
        <Texture
          atlas="questlog-quest-glow-yellow" useAtlasSize="true"
          parentKey="HighlightTexture"
        >
          <Anchors>
            <Anchor
              point="TOP"
              relativeKey="$parent.PetName"
              y="4"
            />

            <Anchor
              point="BOTTOM"
              relativeKey="$parent.PetName"
              y="-4"
            />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
    <ButtonText
      nonspacewrap="true"
      parentKey="ButtonText"
    >
      <Size x="0" y="10" />

      <Anchors>
        <Anchor point="LEFT" x="20" y="0" />
      </Anchors>
    </ButtonText>
    <NormalFont style="GameFontNormalLeft" />
    <HighlightFont style="GameFontHighlightLeft" />
    <DisabledFont style="GameFontHighlightLeft" />
  </Button>

  <EventScrollFrame
    inherits="ScrollFrameTemplate"
    name="QuestLogPanelScrollFrameTemplate"
    virtual="true"
  >
    <KeyValues>
      <KeyValue key="scrollBarX" value="8" type="number" />
      <KeyValue key="scrollBarTopY" value="2" type="number" />
      <KeyValue key="scrollBarBottomY" value="-4" type="number" />
    </KeyValues>
    <Anchors>
      <Anchor point="TOPLEFT" />
      <Anchor point="BOTTOMRIGHT" />
    </Anchors>
    <ScrollChild>
      <Frame
        inherits="VerticalLayoutFrame, POIButtonOwnerTemplate"
        parentKey="Contents"
      >
        <Size x="304" y="454" />
        <Anchors>
          <Anchor point="TOPLEFT" />
        </Anchors>
        <Frames>
          <Frame parentKey="Separator" hidden="true">
            <Size x="304" y="15" />
            <KeyValues>
              <KeyValue key="leftPadding" value="2" type="number" />
            </KeyValues>
            <Layers>
              <Layer level="OVERLAY">
                <Texture
                  atlas="QuestLog-frame-devider"
                  parentKey="Divider"
                  setAllPoints="true"
                />
              </Layer>
            </Layers>
          </Frame>
        </Frames>
      </Frame>
    </ScrollChild>
    <Frames>
      <Frame
        inherits="QuestLogBorderFrameTemplate"
        parentKey="BorderFrame"
      >
        <Layers>
          <Layer level="BACKGROUND">
            <Texture
              atlas="questlog-frame-gradient-bottom"
              parentKey="Shadow"
              useAtlasSize="true"
            >
              <Anchors>
                <Anchor point="BOTTOM" y="4" />
              </Anchors>
            </Texture>
          </Layer>
        </Layers>
      </Frame>
    </Frames>
    <Layers>
      <Layer level="BACKGROUND">
        <Texture
          atlas="QuestLog-main-background"
          parentKey="Background"
          useAtlasSize="true"
        >
          <Anchors>
            <Anchor point="TOPLEFT" />
            <Anchor point="BOTTOMRIGHT" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="ARTWORK">
        <FontString
          hidden="true"
          inherits="Game16Font"
          parentKey="EmptyText"
          text="No Items"
        >
          <Size x="250" />
          <Anchors>
            <Anchor point="CENTER" y="50" />
          </Anchors>
        </FontString>
        <FontString
          inherits="Game15Font_Shadow"
          parentKey="TitleText"
          text="Quest Log Panel"
          wordwrap="false"
        >
          <Anchors>
            <Anchor
              point="BOTTOM"
              relativeKey="$parent.BorderFrame"
              relativePoint="TOP"
              x="-1"
              y="3"
            />
          </Anchors>
        </FontString>
      </Layer>
      <Layer level="OVERLAY">
        <Texture parentKey="Edge" atlas="questlog_line_scrollbar" useAtlasSize="true" alpha="0">
          <Anchors>
            <Anchor point="TOPRIGHT" x="25" y="0" />
            <Anchor point="BOTTOMRIGHT" x="25" y="3" />
          </Anchors>
        </Texture>
      </Layer>
    </Layers>
  </EventScrollFrame>
  <!-- Quest Log tab for battle pets -->
  <Frame
    inherits="QuestLogTabButtonTemplate"
    parent="QuestMapFrame"
    parentKey="BattlePetsTab"
    mixin="BattlePetsTabMixin"
  >
    <KeyValues>
      <KeyValue key="displayMode" value="QuestLogDisplayMode.BattlePets" type="global" />
      <KeyValue key="tooltipText" value="Battle Pets" type="string" />
    </KeyValues>
  </Frame>
  <!-- Quest Log panel template -->
  <Frame
    name="QuestLogPanelTemplate"
    virtual="true"
  >
    <Anchors>
      <Anchor
        point="TOPLEFT"
        relativeKey="$parent.ContentsAnchor"
        y="-29"
      />
      <Anchor
        point="BOTTOMRIGHT"
        relativeKey="$parent.ContentsAnchor"
        x="-22"
      />
    </Anchors>
  </Frame>
  <Frame
    inherits="QuestLogPanelTemplate"
    mixin="BattlePetsMixin"
    parent="QuestMapFrame"
    parentArray="ContentFrames"
    parentKey="BattlePetsFrame"
  >
    <KeyValues>
      <KeyValue key="displayMode" value="QuestLogDisplayMode.BattlePets" type="global" />
    </KeyValues>
    <Frames>
      <EventScrollFrame
        inherits="QuestLogPanelScrollFrameTemplate"
        mixin="BattlePetScrollFrameMixin"
        parentKey="ScrollFrame"
      >
        <Scripts>
          <OnLoad method="OnLoad" />
        </Scripts>
      </EventScrollFrame>
    </Frames>
  </Frame>
</Ui>